<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_textured">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="175dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#95000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/textView"
            android:textColor="@android:color/white"
            android:text="Programs offered in different universities of Pakistan"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/> />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spPrograms"
            android:spinnerMode="dialog"
            android:textColor="@android:color/white"
            android:prompt="@string/program_prompt"
            android:layout_gravity="center"
            style="@android:style/Widget.Holo.Light.Spinner">

        </Spinner>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOfferings"
            android:text="Find Programs"
            android:onClick="viewOfferings"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

</RelativeLayout>